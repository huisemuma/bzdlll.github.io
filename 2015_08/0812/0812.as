import com.greensock.TweenMax;import com.greensock.easing.*;var horizon:Number = 150;var Height:Number = 0;var pointArr:Array = [];var initArr:Array = [new Point(214, 278), new Point(185, 331), new Point(79, 295), new Point(228, 252), new Point(317, 267)];var percentArr:Array = [];var lineBox:Shape = new Shape();addChild(lineBox);function creatPoint():Shape{	var foo:Shape = new Shape();	foo.graphics.lineStyle(4, 0, 1);	foo.graphics.drawCircle(0, 0, 4);	return foo;}for(var i:int = 0; i < 5; i++){	pointArr.push(creatPoint());	pointArr[i].x = initArr[i].x;	pointArr[i].y = initArr[i].y;	//addChild(pointArr[i]);		percentArr.push((initArr[i].y - horizon) / (initArr[0].y - horizon));}run()function run(){	TweenMax.to(pointArr[0], 1, {y:120, ease:Elastic.easeOut, onUpdate:follow});	TweenMax.to(pointArr[0], 1, {y:initArr[0].y, ease:Sine.easeInOut, delay:1, onUpdate:follow, onComplete:run});}function follow(){	for(var i = 1; i < 5; i++)	{		pointArr[i].y = initArr[i].y - (initArr[0].y - pointArr[0].y) * percentArr[i];	}		drawLine();}function drawLine(){	lineBox.graphics.clear();	lineBox.graphics.beginFill(0x999999, 1);	lineBox.graphics.drawRect(0, horizon, 400, 400);	lineBox.graphics.beginFill(0, 1);	lineBox.graphics.drawRect(0, 0, 400, horizon);	lineBox.graphics.beginFill(0xFEFEFE, 1);	lineBox.graphics.moveTo(pointArr[1].x, pointArr[1].y);	lineBox.graphics.lineTo(pointArr[2].x, pointArr[2].y);	lineBox.graphics.lineTo(pointArr[3].x, pointArr[3].y);	lineBox.graphics.lineTo(pointArr[4].x, pointArr[4].y);	lineBox.graphics.lineTo(pointArr[1].x, pointArr[1].y);	lineBox.graphics.endFill();		lineBox.graphics.beginFill(0xBBBBBB, 1);	lineBox.graphics.moveTo(pointArr[1].x, pointArr[1].y);	lineBox.graphics.lineTo(pointArr[2].x, pointArr[2].y);	lineBox.graphics.lineTo(initArr[2].x, initArr[2].y);	lineBox.graphics.lineTo(initArr[1].x, initArr[1].y);	lineBox.graphics.lineTo(pointArr[1].x, pointArr[1].y);	lineBox.graphics.endFill();		lineBox.graphics.beginFill(0x555555, 1);	lineBox.graphics.moveTo(pointArr[1].x, pointArr[1].y);	lineBox.graphics.lineTo(pointArr[4].x, pointArr[4].y);	lineBox.graphics.lineTo(initArr[4].x, initArr[4].y);	lineBox.graphics.lineTo(initArr[1].x, initArr[1].y);	lineBox.graphics.lineTo(pointArr[1].x, pointArr[1].y);	lineBox.graphics.endFill();	}